#include "RandomPredictor.h"

RandomPredictor::RandomPredictor():
    PredictorIfc("Random") {

}

RandomPredictor::~RandomPredictor() {
}

simtime_t RandomPredictor::predict(CMPMsg* msg) {
    // random time between 50 to 100 NS
    PredictionInterval prediction = SimTime(50 + rand() % 50, SIMTIME_NS);

    return prediction;
}

