#include "RandomPredictor.h"

RandomPredictor::RandomPredictor():
    PredictorIfc("Random") {

}

RandomPredictor::~RandomPredictor() {
}

PredictionInterval RandomPredictor::predict(CMPMsg* msg) {
    // random time between 50 to 100 NS
    simtime_t left  = Now() + SimTime(50 + rand() % 50, SIMTIME_NS);
    simtime_t right = left + SimTime(50 + rand() % 50, SIMTIME_NS);

    return PredictionInterval(left, right);
}

